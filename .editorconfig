# editorconfig - coding styles definitions.
# http://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
max_line_length = 120
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,yaml,yml,toml}]
indent_style = space
indent_size = 2

[*.{config,types}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
